<div class="paper container index">
  
  <form id="login-form">
    <h1>Login</h1>
    <p class="error-message"></p>
    <div class="form-group">
      <label for="">Email</label>
      <input id="login-email" name="email" type="text" class="form-control" required>
    </div>
    <div class="form-group">
      <label for="">Password</label>
      <input id="login-pass"name="password" type="password" class="form-control" required>
    </div>
    <div class="login-buttons">
      <input type="submit" class="btn" value="Login">
    </div>
  </form>
</div>