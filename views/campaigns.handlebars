<div class="flex-center">
  <div class="text-center">
    <h1>Campaigns</h1>
  </div>
  <div class="text-right">
    <label class="paper-btn margin" id="new-camp-btn" for="campaignModal">+ New Campaign</label>
  </div>
  {{#each campaigns}}


  <div class="collapsible campaign">
    <input id="collapsible-{{this.dataValues.id}}" type="checkbox" name="collapsible">
    <label for="collapsible-{{this.dataValues.id}}">{{this.dataValues.name}}</label>
    <div class="collapsible-body">
      <div class="row flex-edges">
        <div class="col-8 col">
          <h3>Characters</h3>
        </div>
        <div class="col-4 col"><button class="delete-campaign float-right"
            data-id={{this.dataValues.id}}>Delete</button></div>
      </div>
      <table class="campaign-char-table" data-id={{this.dataValues.id}}>
        <thead>
          <tr>
            <th class="row table-header">
              <div class="col-6 col">
                <h4>Name</h4>
              </div>

              <div class="col-6 col text-right add-character" data-id={{this.dataValues.id}}>
                <select class="campaign-char-select">
                  {{#each ../characters}}
                  <option value={{this.dataValues.id}}>{{this.dataValues.name}}</option>
                  {{/each}}
                </select>
                <label class="paper-btn margin char-btn campaign-add-char-btn">Add Character</label>
              </div>

            </th>
          </tr>

        </thead>
        <tbody>
          {{#each this.dataValues.Characters}}
          <tr data-id={{this.dataValues.id}}>
            <td class="name">{{this.dataValues.name}}</td>
            <td class="text-right"><label class="paper-btn char-btn view" for="characterModal">View</label></td>
            <td class="text-right"><label class="paper-btn char-btn action">Action</label>
            </td>
            <td class="text-right"><label class="btn-close remove-from-campaign"
                data-id="{{this.dataValues.id}}">X</label></td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
  {{/each}}
</div>

