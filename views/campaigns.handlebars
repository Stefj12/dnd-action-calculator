<div class="paper container">
  <div class="text-center">
    <h1>PROFILE</h1>
  </div>

  {{!-- campaign modal --}}
  <input class="modal-state" id="campaignModal" type="checkbox">
  <div class="modal">
    <label class="modal-bg" for="campaignModal"></label>
    <div class="modal-body text-center paper container container-xs campaign-modal">
      <label class="btn-close" for="campaignModal">X</label>
      <h4 class="modal-title">Campaign Name</h4>
      <h5 class="modal-subtitle">Name your new campaign!</h5>
      <div class="form-group">
        <input type="text" placeholder="" id="campaign-name">
      </div>
      <label class="paper-btn margin" id="save-campaign" for="campaignModal">Save</label>
    </div>
  </div>

  {{!-- character modal --}}
  <input class="modal-state" id="characterModal" type="checkbox">
  <div class="modal">
    <label class="modal-bg" for="characterModal"></label>
    <div class="modal-body paper container text-center new-character-modal" data-id="">
      <label class="btn-close" for="characterModal">X</label>
      <h4 class="modal-title" id="character-modal-title">Add a new Character</h4>
      <div class="form-group">
        <div class="row">
          <div class="col-2 col">
            <div class="row">
              <label for="str">Strength</label>
              <input type="text" placeholder="10" maxlength="2" class="stat" id="str">
            </div>

            <div class="row">
              <label for="dex">Dexterity</label>
              <input type="text" placeholder="10" maxlength="2" class="stat" id="dex">
            </div>

            <div class="row">
              <label for="con">Constitution</label>
              <input type="text" placeholder="10" maxlength="2" class="stat" id="con">
            </div>

            <div class="row">
              <label for="wis">Wisdom</label>
              <input type="text" placeholder="10" maxlength="2" class="stat" id="wis">
            </div>

            <div class="row">
              <label for="int">Intelligence</label>
              <input type="text" placeholder="10" maxlength="2" class="stat" id="int">
            </div>

            <div class="row">
              <label for="cha">Charisma</label>
              <input type="text" placeholder="10" maxlength="2" class="stat" id="cha" min="0">
            </div>

          </div>

          <div class="col-10">
            <div class="row">

              <div class="col-4 col basic-info">
                <label for="characterName">Character Name</label>
                <input type="text" placeholder="" class="" id="character-name">
                <label for="characterName">Player Name</label>
                <input type="text" placeholder="" class="" id="player-name">
              </div>

              <div class="col-4 col basic-info">
                <label for="race">Race</label>
                <select placeholder="" class="" id="race">
                  {{#each races}}
                  <option value={{this.dataValues.id}}>{{this.dataValues.name}}</option>
                  {{/each}}
                </select>
                <label for="level">Level</label>
                <input type="text" placeholder="1" class="" id="level">
              </div>

              <div class="col-4 col basic-info">
                <label for="race">Class</label>
                <select placeholder="" class="" id="class">
                  {{#each classes}}
                  <option value={{this.dataValues.id}}>{{this.dataValues.name}}</option>
                  {{/each}}
                </select>
                <label for="exp">Experience Points</label>
                <input type="text" placeholder="0" class="" id="exp">
              </div>

            </div>



            <div class="row">
              <div class="col-8 col">
                <div class="row">
                  <div class="col-4 col">
                    <label for="ac">Armor Class</label>
                    <input type="text" placeholder="10" maxlength="2" class="stat" id="ac" min="0">
                  </div>
                  <div class="col-4 col">
                    <label for="init">Initiative</label>
                    <input type="text" placeholder="0" maxlength="2" class="stat" id="init" min="0">
                  </div>
                  {{!-- <div class="col-4 col">
                    <label for="spd">Speed</label>
                    <input type="text" placeholder="30" maxlength="2" class="stat" id="spd" min="0">
                  </div> --}}
                </div>
                <div class="row">
                  <div class="col-12 col">
                    <label for="hp">Current Hit Points</label>
                    <input type="text" placeholder="" class="hp" id="hp" min="0">
                  </div>
                </div>
                <div class="row">
                  <div class="col-12 col">
                    <label for="shield">Shield</label>
                    <input type="checkbox" name="shield" id="shield">
                  </div>
                </div>
                <div class="row">
                  <div class="col-12 col">
                    <label for="weapon">Weapon</label>
                    <select name="weapon" id="weapon">
                      {{#each weapons}}
                      <option value={{this.dataValues.id}}>{{this.dataValues.name}}</option>
                      {{/each}}
                    </select>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <label class="paper-btn margin" id="save-character" for="characterModal">Save</label>
    </div>
  </div>

