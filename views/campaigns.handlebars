<div class="paper container">
  <div class="text-center">
    <h1>PROFILE</h1>
  </div>

  {{!-- campaign modal --}}
  <input class="modal-state" id="campaignModal" type="checkbox">
  <div class="modal">
    <label class="modal-bg" for="campaignModal"></label>
    <div class="modal-body text-center paper container container-xs campaign-modal">
      <label class="btn-close" for="campaignModal">X</label>
      <h4 class="modal-title">Campaign Name</h4>
      <h5 class="modal-subtitle">Name your new campaign!</h5>
      <div class="form-group">
        <input type="text" placeholder="" id="campaign-name">
      </div>
      <label class="paper-btn margin" id="save-campaign" for="campaignModal">Save</label>
    </div>
  </div>

{{!-- character modal --}}
  <input class="modal-state" id="characterModal" type="checkbox">
  <div class="modal">
    <label class="modal-bg" for="characterModal"></label>
    <div class="modal-body paper container text-center new-character-modal" data-id="">
      <label class="btn-close" for="characterModal">X</label>
      <h4 class="modal-title" id="character-modal-title">Add a new Character</h4>
      <div class="form-group">
        <div class="row">
          <div class="col-2 col">
            <div class="row">
              <label for="str">Strength</label>
              <input type="text" placeholder="10" maxlength="2" class="stat" id="str">
            </div>

            <div class="row">
              <label for="dex">Dexterity</label>
              <input type="text" placeholder="10" maxlength="2" class="stat" id="dex">
            </div>

            <div class="row">
              <label for="con">Constitution</label>
              <input type="text" placeholder="10" maxlength="2" class="stat" id="con">
            </div>

            <div class="row">
              <label for="wis">Wisdom</label>
              <input type="text" placeholder="10" maxlength="2" class="stat" id="wis">
            </div>

            <div class="row">
              <label for="int">Intelligence</label>
              <input type="text" placeholder="10" maxlength="2" class="stat" id="int">
            </div>

            <div class="row">
              <label for="cha">Charisma</label>
              <input type="text" placeholder="10" maxlength="2" class="stat" id="cha" min="0">
            </div>

          </div>

          <div class="col-10">
            <div class="row">

              <div class="col-4 col basic-info">
                <label for="characterName">Character Name</label>
                <input type="text" placeholder="" class="" id="character-name">
                <label for="characterName">Player Name</label>
                <input type="text" placeholder="" class="" id="player-name">
              </div>

              <div class="col-4 col basic-info">
                <label for="race">Race</label>
                <select placeholder="" class="" id="race">
                  {{#each races}}
                  <option value={{this.dataValues.id}}>{{this.dataValues.name}}</option>
                  {{/each}}
                </select>
                <label for="level">Level</label>
                <input type="text" placeholder="1" class="" id="level">
              </div>

              <div class="col-4 col basic-info">
                <label for="race">Class</label>
                <select placeholder="" class="" id="class">
                  {{#each classes}}
                  <option value={{this.dataValues.id}}>{{this.dataValues.name}}</option>
                  {{/each}}
                </select>
                <label for="exp">Experience Points</label>
                <input type="text" placeholder="0" class="" id="exp">
              </div>

            </div>



            <div class="row">
              <div class="col-8 col">
                <div class="row">
                  <div class="col-4 col">
                    <label for="ac">Armor Class</label>
                    <input type="text" placeholder="10" maxlength="2" class="stat" id="ac" min="0">
                  </div>
                  <div class="col-4 col">
                    <label for="init">Initiative</label>
                    <input type="text" placeholder="0" maxlength="2" class="stat" id="init" min="0">
                  </div>
                  {{!-- <div class="col-4 col">
                    <label for="spd">Speed</label>
                    <input type="text" placeholder="30" maxlength="2" class="stat" id="spd" min="0">
                  </div> --}}
                </div>
                <div class="row">
                  <div class="col-12 col">
                    <label for="hp">Current Hit Points</label>
                    <input type="text" placeholder="" class="hp" id="hp" min="0">
                  </div>
                </div>
                <div class="row">
                  <div class="col-12 col">
                    <label for="shield">Shield</label>
                    <input type="checkbox" name="shield" id="shield">
                  </div>
                </div>
                <div class="row">
                  <div class="col-12 col">
                    <label for="weapon">Weapon</label>
                    <select name="weapon" id="weapon">
                      {{#each weapons}}
                      <option value={{this.dataValues.id}}>{{this.dataValues.name}}</option>
                      {{/each}}
                    </select>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <label class="paper-btn margin" id="save-character" for="characterModal">Save</label>
    </div>
  </div>

{{!-- calculator modal --}}
  <div class="row flex-spaces child-borders">
  <label class="paper-btn margin" for="calc-modal">Test Calculator Open</label>
</div>
<input class="modal-state" id="calc-modal" type="checkbox">
<div class="modal">
  <label class="modal-bg" for="calc-modal"></label>
  <div class="modal-body">
    <label class="btn-close" for="calc-modal">X</label>
    <h4 class="modal-title">Calculator</h4>
    <h5>Character</h5>
    <input type="text" name="num-one" id="num-one">
    <br><br>
    <h5>Attack Roll</h5>
    <p>Results: <output id="subResult" form="calcForm"></output></p>
    <br><br>
    <div class="row">
      <input class="col-md-2" type="number" name="modifier" id="attackModifier" value="0"><b>+</b>
      <input type="number" name="proficiency" class="col-md-2" id="attackProficiency" value="0"><b>-</b>
      <div class="col-md-4">
        <span id="attackResult">100</span><br>
        <button id="roll-btn" type="button">Roll</button><br>
        <input type="checkbox" id="attAdd" />
        <label for="attAdd"> Advantage</label><br>
        <input type="checkbox" id="addDis" />
        <label for="addDis"> disAdvantage</label><br>
      </div>
   </div>
    <h1 id="resultArea"></h1>
    <h5>Damage Roll</h5>
    <p>Results: <output id="subResult" form="calcForm"></output></p>
    <div class="row">
      <input class="col-md-2" type="number" name="modifier" id="damageModifier" value="0"><b>+</b>
      <input type="number" name="proficiency" class="col-md-2" id="damageProficiency" value="0"><b>-</b>
      <div class="col-md-4">
        <span id="damageResult">100</span><br>
        <button id="roll-btn" type="button">Roll</button><br>
        <input type="checkbox" id="disAdd" />
        <label for="attAdd"> Advantage</label><br>
        <input type="checkbox" id="addDis" />
        <label for="addDis"> disAdvantage</label><br>
      </div>
    </div>
  </div>
  </div>





  <div class="flex-center">
    <div class="text-center">
    <h1>Campaigns</h1>
  </div>
  <div class="text-right">
    <label class="paper-btn margin" id="new-camp-btn" for="campaignModal">+ New Campaign</label>
  </div>
    {{#each campaigns}}


    <div class="collapsible">
      <input id="collapsible-{{this.dataValues.id}}" type="checkbox" name="collapsible">
      <label for="collapsible-{{this.dataValues.id}}">{{this.dataValues.name}}</label>
      <div class="collapsible-body">
        <div class="row flex-edges">
          <div class="col-8 col"><h3>Characters</h3></div>
          <div class="col-4 col"><button class="delete-campaign float-right" data-id={{this.dataValues.id}}>Delete</button></div>
        </div>      
        <table data-id={{this.dataValues.id}}>
          <thead>
            <tr>
              <div class="row table-header">
                <div class="col-6 col">
                  <h4>Name</h4>
                </div>
                
                <div class="col-6 col text-right add-character" data-id={{this.dataValues.id}}>
                  <select class="campaign-char-select">
                  {{#each ../characters}}
                    <option value={{this.dataValues.id}}>{{this.dataValues.name}}</option>
                  {{/each}}
                </select>
                  <label class="paper-btn margin char-btn campaign-add-char-btn">Add Character</label>
                  </div>
                    
              </div>
            </tr>

          </thead>
          <tbody>
            {{#each this.dataValues.Characters}}
            <tr data-id={{this.dataValues.id}}>
              <td class="name">{{this.dataValues.name}}</td>
              <td class="text-right"><label class="paper-btn char-btn view" for="characterModal">View</label></td>
              <td class="text-right"><label class="paper-btn char-btn action">Action</label>
              </td>
              <td class="text-right"><label class="btn-close remove-from-campaign" data-id="{{this.dataValues.id}}">X</label></td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
    {{/each}}
  </div>
  <div class="text-center">
    <h1>Characters</h1>
  </div>
  <table id="all-char-table">
    <thead>
      <tr>
        <div class="row table-header">
          <div class="col-6 col">
            <h4>Name</h4>
          </div>
          <div class="col-6 col text-right" ><label id="add-character" class="paper-btn margin new-char-btn"
              for="characterModal">+ New Character</label></div>
        </div>
      </tr>

    </thead>
    <tbody>
      {{#each characters}}
      <tr id="character{{this.dataValues.id}}" data-id={{this.dataValues.id}}>
        <td class="name">{{this.dataValues.name}}</td>
        <td class="text-right"><label class="paper-btn view" for="characterModal">View</label></td>
        <td class="text-right"><label class="paper-btn update"
            for="characterModal">Update</label></td>
        <td class="text-right"><label class="paper-btn action">Action</label></td>
        <td class="text-right"><label class="btn-close delete" id="delete">X</label></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>